<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unidad5Ejercicio4_Calendario.MainPage">

    <StackLayout>
        <Label Text="Fecha de Entrada:" />
        <DatePicker x:Name="entradaDatePicker" DateSelected="EntradaDateSelected" Format="dd/mm/yyyy"/>

        <Label Text="Fecha de Salida:" />
        <DatePicker x:Name="salidaDatePicker" DateSelected="SalidaDateSelected" Format="dd/mm/yyyy"/>
    </StackLayout>

</ContentPage>
