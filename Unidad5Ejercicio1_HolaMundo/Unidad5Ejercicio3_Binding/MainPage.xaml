<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unidad5Ejercicio3_Binding.MainPage">

    <StackLayout>
        <Entry x:Name="entry1" Placeholder="Entry 1" />
        <Entry x:Name="entry2" Placeholder="Entry 2" />
        <Label Text="{Binding Text, Source={x:Reference entry1}, Mode=TwoWay}" />
        <Label Text="{Binding Text, Source={x:Reference entry2}, Mode=OneWay}" />
        <Label Text="{Binding Text, Source={x:Reference entry1}, Mode=OneTime}" />
    </StackLayout>

</ContentPage>
