<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio01Maui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="Usuario:"/>
            <Entry x:Name="user"/>

            <Label Text="Mensaje"/>
            <Entry x:Name="message"/>

            <Button
                x:Name="EnviarBtn"
                Text="Enviar"
                Clicked="btnSend_Clicked"
                HorizontalOptions="Center" />

            <Label x:Name="lblChat"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
