<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlacasSolares.Views.Login"
             Title="Login">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70*"/>
            <!-- El 70% del espacio vertical -->
            <ColumnDefinition Width="30*"/>
            <!-- El 30% del espacio vertical -->
        </Grid.ColumnDefinitions>

        <!-- Parte superior (70%) con fondo azul -->
        <StackLayout Grid.Column="0">
            <StackLayout.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#1A8EFF" Offset="0.1"/>
                    <GradientStop Color="#1A1BFF" Offset="1.0"/>
                </LinearGradientBrush>
            </StackLayout.Background>
        </StackLayout>

        <!-- Parte inferior (30%) con fondo blanco -->
        <BoxView Grid.Column="1" Color="White"/>
    </Grid>
</ContentPage>