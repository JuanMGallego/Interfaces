<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unidad09_Ejercicios.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Slider x:Name="slider" Minimum="1" Maximum="50" Value="{Binding Source=}"/>

            <Label x:Name="label" Text="Texto de ejemplo" FontSize="{Binding FontSize}"/>

            <Entry x:Name="entry" Text="{Binding FontSize}"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
