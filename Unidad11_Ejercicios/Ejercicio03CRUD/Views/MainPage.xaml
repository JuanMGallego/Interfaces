<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="Ejercicio03CRUD.Views.MainPage"
             xmlns:models="clr-namespace:Ejercicio03CRUD.ViewModels"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ContentPage.BindingContext>
        <models:MainVM />
    </ContentPage.BindingContext>
    
    <StackLayout>
        <Label Text="CRUD | JMGG" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
        <Button Text="Entrar" HorizontalOptions="FillAndExpand" Command="{Binding ChangePageCommand}"></Button>
    </StackLayout>

</ContentPage>