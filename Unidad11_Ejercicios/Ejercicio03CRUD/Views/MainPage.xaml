<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="Ejercicio03CRUD.Views.MainPage"
             xmlns:models="clr-namespace:Ejercicio03CRUD.ViewModels"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ContentPage.BindingContext>
        <models:MainVM />
    </ContentPage.BindingContext>

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="CRUD | JMGG" FontSize="20" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Margin="20"/>
        <Button Text="Entrar" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Command="{Binding ChangePageCommand}"/>
    </StackLayout>

</ContentPage>